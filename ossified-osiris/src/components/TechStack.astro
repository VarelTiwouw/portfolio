// Category definitions with labels and descriptions
const categories = [
	{ key: "core", label: "Languages", description: "Core programming languages I work with", items: techStack.core },
	{ key: "frontend", label: "Frontend", description: "Frameworks & libraries for building user interfaces", items: techStack.frontend },
	{ key: "backend", label: "Backend", description: "Server-side technologies & runtime environments", items: techStack.backend },
	{ key: "tools", label: "Tools", description: "Design, version control & development tools", items: techStack.tools },
];
---

<section
	id="stack"
	class="section-padding reveal"
>
	<div class="mx-auto max-w-6xl px-6">
		<!-- Section header -->
		<div class="reveal-child mb-16">
			<p class="font-sans text-xs tracking-widest uppercase text-muted mb-2">Expertise</p>
			<h2 class="blur-in font-sans text-3xl md:text-4xl font-semibold tracking-tight text-paper">
				Skills & Technologies
			</h2>
		</div>

		<!-- Horizontal scrolling marquee -->
		<div class="reveal-child mb-12 -mx-6 overflow-hidden">
			<!-- Top row: STROKE / OUTLINE text -->
			<div class="marquee-container py-5">
				<div class="marquee-content">
					{[...Array(2)].map(() => (
						<>
							{categories.flatMap((category) =>
								category.items.map((item) => (
									<span class="marquee-item text-3xl md:text-4xl lg:text-5xl font-sans font-bold tracking-tight whitespace-nowrap marquee-stroke">
										{item}
									</span>
								))
							)}
						</>
					))}
				</div>
			</div>
			<!-- Bottom row: FILL text -->
			<div class="marquee-container marquee-reverse py-5">
				<div class="marquee-content">
					{[...Array(2)].map(() => (
						<>
							{categories.flatMap((category) =>
								category.items.map((item) => (
									<span class="marquee-item text-3xl md:text-4xl lg:text-5xl font-sans font-bold tracking-tight whitespace-nowrap text-paper/15">
										{item}
									</span>
								))
							).reverse()}
						</>
					))}
				</div>
			</div>
		</div>

		<!-- All items in a single grid -->
		<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4" id="tech-grid">
			{categories.flatMap((category, catIdx) => {
				let globalIdx = 0;
				for (let c = 0; c < catIdx; c++) globalIdx += categories[c].items.length;
				return category.items.map((item, itemIdx) => (
					<div
						class="wave-card glass-container p-5 flex flex-col items-center justify-center gap-3 hover:scale-105 transition-all duration-300 group cursor-default"
						style={`--wave-delay: ${(globalIdx + itemIdx) * 60}ms`}
					>
						<div
							class="text-muted/60 group-hover:text-accent transition-colors duration-300"
							set:html={allIcons[item] || `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="28" height="28"><circle cx="12" cy="12" r="10"/></svg>`}
						/>
						<span class="text-xs font-mono text-paper/80 font-medium text-center tracking-wider uppercase">
							{item}
						</span>
						<span class="text-[10px] font-mono text-accent/50 tracking-widest uppercase">
							{category.label}
						</span>
					</div>
				));
			})}
		</div>
	</div>
</section>
