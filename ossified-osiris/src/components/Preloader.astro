<!-- Preloader overlay -->
<div id="preloader" class="preloader">
	<div class="preloader-content">
		<span class="preloader-brand">VT<span class="text-accent">.</span></span>
		<div class="preloader-bar">
			<div class="preloader-bar-fill"></div>
		</div>
	</div>
</div>

<style>
	.preloader {
		position: fixed;
		inset: 0;
		z-index: 9999;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgb(var(--color-bg));
		transition: opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1),
					visibility 0.6s;
	}

	.preloader.is-done {
		opacity: 0;
		visibility: hidden;
		pointer-events: none;
	}

	.preloader-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5rem;
	}

	.preloader-brand {
		font-family: Inter, system-ui, sans-serif;
		font-size: 3rem;
		font-weight: 700;
		letter-spacing: -0.03em;
		color: rgb(var(--color-text));
		opacity: 0;
		transform: translateY(20px);
		animation: preloader-fade-in 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.1s forwards;
	}

	.preloader-bar {
		width: 120px;
		height: 2px;
		background: rgba(var(--color-text), 0.1);
		border-radius: 2px;
		overflow: hidden;
		opacity: 0;
		animation: preloader-fade-in 0.4s ease 0.3s forwards;
	}

	.preloader-bar-fill {
		height: 100%;
		width: 0%;
		background: rgb(var(--color-accent));
		border-radius: 2px;
		animation: preloader-fill 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.4s forwards;
	}

	@keyframes preloader-fade-in {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes preloader-fill {
		to {
			width: 100%;
		}
	}
</style>

<script>
	window.addEventListener('load', () => {
		const preloader = document.getElementById('preloader');
		if (preloader) {
			setTimeout(() => {
				preloader.classList.add('is-done');
			}, 1800);
		}
	});
</script>
