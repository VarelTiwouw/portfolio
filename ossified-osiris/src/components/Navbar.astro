<header class="glass-navbar fixed top-0 inset-x-0 z-20">
	<div class="mx-auto max-w-6xl px-6 py-4 flex items-center justify-between">
		<!-- Brand -->
		<a href="#top" class="font-sans font-bold text-lg tracking-tight text-paper hover:text-accent transition-colors">
			VT<span class="text-accent">.</span>
		</a>

		<!-- Navigation -->
		<nav class="hidden sm:flex items-center gap-8 text-sm font-sans tracking-wide text-muted">
			<a href="#about" class="hover:text-paper transition-colors">About</a>
			<a href="#work" class="hover:text-paper transition-colors">Work</a>
			<a href="#stack" class="hover:text-paper transition-colors">Skills</a>
			<a href="#contact" class="hover:text-paper transition-colors">Contact</a>
		</nav>

		<!-- Theme toggle -->
		<button
			type="button"
			id="theme-toggle"
			class="inline-flex items-center justify-center text-muted border border-neutral-800/50 w-9 h-9 rounded-full hover:border-accent hover:text-accent transition-colors"
			onclick="window.__toggleTheme && window.__toggleTheme()"
			aria-label="Toggle theme"
		>
			<!-- Sun icon (visible in dark mode) -->
			<svg class="theme-icon-sun w-[18px] h-[18px]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
			</svg>
			<!-- Moon icon (visible in light mode) -->
			<svg class="theme-icon-moon w-[18px] h-[18px]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z" />
			</svg>
		</button>
	</div>
</header>
